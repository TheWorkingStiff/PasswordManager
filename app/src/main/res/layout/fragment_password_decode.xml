<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScreenPasswordDecodeFragment"
    android:background="@drawable/combo">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:textColor="@color/primary_light"
        android:text="Enter your master password here"
        android:typeface="serif"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="0dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/primary_light"
        android:background="@drawable/shape_bot_rect"
        android:text="Master Password"
        android:typeface="serif"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|center_horizontal" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/masterPwd"
        android:inputType="text|textEmailAddress"
        android:background="@drawable/shape_top_rect"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical|center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/primary_light"
        android:background="@drawable/shape_bot_rect"
        android:text="Password"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|center_horizontal" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPwd"
        android:background="@drawable/shape_top_rect"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:textSize="48dp"
        android:background="@color/primary_dark"
        android:textColor="@color/primary_light"
        android:text="Translation:"
        android:id="@+id/txtTranslate"
        android:layout_margin="64dp"
        android:gravity="center_vertical|center_horizontal" />
</LinearLayout>


</LinearLayout>
